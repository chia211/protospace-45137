<div class="card">
  <% if prototype.image.attached? %>
    <%= link_to prototype_path(prototype) do %>
      <%= image_tag prototype.image, class: :card__img %>
    <% end %>
  <% end %>
  
  <div class="card__body">
    <%= link_to prototype.title, root_path, class: :card__title%>
    <p class="card__summary">
      <%= link_to prototype.catch_copy %>
    </p>
    <%= link_to prototype.user.name, root_path, class: :card__user %>
  </div>
</div>